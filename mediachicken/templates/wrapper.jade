doctype 5
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='')
    meta(name='author', content='')
    link(rel='shortcut icon', href='#{pathToAssets}/assets/ico/favicon.png')
    if params
      title= params.TITLE
    else
      title Index
    endif
    = template_header()|safe
  body
    // Wrap all page content here
    div#wrap
      // Begin page content
      div.container
        a(href="/")
          img(src="{{ url_for('static', filename='img/mediachicken.svg') }}").img-responsive.mediachicken-svg#logo
        div.header-spacer


        nav.navbar.navbar-default(role="navigation")#navigation
          div.container-fluid
            div.navbar-header
              button(type="button", class="navbar-toggle collapsed", data-toggle="collapse")
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar

            div.collapse.navbar-collapse#bs-example-navbar-collapse-1
              ul.nav.navbar-nav
                for key in import_yml("nav")
                  li
                    a(href="{{import_yml('nav')[key].url}}")= import_yml('nav')[key].title

        // This is where subtemplates get rendered
        block body

    div#footer
      div.container
        p.text-muted.credit
          | Hosted with <3 by DigitalOcean
    = template_footer()|safe
